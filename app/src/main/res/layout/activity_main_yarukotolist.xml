<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainYarukotoListActivity">


    <ListView
            android:id="@+id/items_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:scrollbars="none">
    </ListView>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@drawable/ic_action_add" app:maxImageSize="@dimen/fab_margin"
            app:backgroundTint="#B4BDC0"/>

    <Button android:text="@string/startOtukai"
            android:layout_width="168dp"
            android:layout_height="61dp"
            android:id="@+id/StartOtukaiButton"
            app:layout_anchorGravity="bottom|center"
            app:layout_anchor="@+id/items_list"
            android:backgroundTint="#D4DCDD" android:textColor="#00BCD4"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
        <CheckBox
                android:id="@+id/cb_item_is_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/cb_item_is_done"
                android:layout_toRightOf="@+id/cb_item_is_done"
                android:text="Item Text"
                android:textColor="#000000"
                android:textSize="20sp"/>
        <ImageButton
                android:id="@+id/iv_cross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_item_text"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:gravity="end"
                app:srcCompat="@drawable/ic_action_clear"/>
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

