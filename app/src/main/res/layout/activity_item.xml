<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ToDoList.ItemActivity">

  <androidx.appcompat.widget.Toolbar
    android:id="@+id/item_toolbar"
    android:layout_width="match_parent"
    android:layout_height="?android:actionBarSize"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    android:background="#4CAF50"/>


  <androidx.recyclerview.widget.RecyclerView
    android:layout_below="@+id/item_toolbar"
    android:id="@+id/rv_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:layout_marginTop="-5dp"/>


  <com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/fab_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:src="@drawable/plus"
    app:backgroundTint="@color/colorPrimaryDark"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginBottom="20dp"
    android:layout_marginRight="25dp"
    android:layout_marginEnd="25dp"
    android:layout_alignEnd="@+id/rv_item"/>

  <TextView
    android:id="@+id/message"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginTop="12dp"
    android:text="@string/title_notifications"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:textSize="24sp"/>
  <Button
    android:text="おつかいを始める"
    android:layout_width="151dp"
    android:layout_height="52dp" android:id="@+id/startOtukai" android:layout_marginBottom="24dp"
    android:layout_alignBottom="@+id/rv_item" android:layout_alignTop="@+id/item_toolbar"
    android:layout_marginTop="583dp" android:layout_marginEnd="131dp" android:layout_alignEnd="@+id/rv_item"
    android:layout_marginStart="129dp" android:layout_alignStart="@+id/rv_item"/>

  <Button
          android:text="おつかいを始める"
          android:layout_width="144dp"
          android:layout_height="66dp"
          android:id="@+id/startotukai"
          android:layout_marginBottom="21dp"
          android:layout_alignBottom="@+id/rv_item"
          android:layout_marginEnd="137dp"
          android:layout_alignEnd="@+id/rv_item"
          android:layout_marginStart="130dp"
          android:layout_alignStart="@+id/rv_item"
          android:layout_alignTop="@+id/item_toolbar"
          android:layout_marginTop="572dp"/>

</RelativeLayout>
